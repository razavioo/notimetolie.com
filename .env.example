# Environment Configuration
# Copy this file to .env and update with your values

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/notimetolie
DATABASE_TEST_URL=postgresql+asyncpg://test_user:test_password@localhost:5432/notimetolie_test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TEST_URL=redis://localhost:6380

# Meilisearch
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_MASTER_KEY=masterKey123
MEILISEARCH_TEST_URL=http://localhost:7701
MEILISEARCH_TEST_MASTER_KEY=testMasterKey123

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=notimetolie
MINIO_TEST_ENDPOINT=localhost:9002
MINIO_TEST_ACCESS_KEY=testminioadmin
MINIO_TEST_SECRET_KEY=testminioadmin123
MINIO_TEST_BUCKET_NAME=notimetolie_test

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
DEBUG=true
ENVIRONMENT=development
API_V1_PREFIX=/v1

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@notimetolie.com

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
PLAUSIBLE_ANALYTICS_URL=https://plausible.io
PLAUSIBLE_DOMAIN=notimetolie.com

# Gamification Settings
XP_PER_BLOCK_CREATED=10
XP_PER_SUGGESTION_APPROVED=5
XP_PER_PATH_CREATED=20
LEVELS_XP_REQUIREMENTS=100,300,600,1000,1500,2100,2800,3600,4500,5500